<containers:MoqawalatiMDIWindow
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:messaging="dz.alkhwarizmix.moqawalati.flex.messaging.*" 
	xmlns:containers="dz.alkhwarizmix.moqawalati.flex.view.containers.*"
	xmlns:controls="dz.alkhwarizmix.moqawalati.flex.view.controls.*"
	title="Chat"
	creationComplete="this_creationCompleteHandler(event)"
	>
	
	<fx:Declarations>
		<messaging:MoqawalatiProducer id="producer" destination="tutorial-chat"/>
		<messaging:MoqawalatiConsumer id="consumer" destination="tutorial-chat" message="messageHandler(event)"/>
	</fx:Declarations>
	
	<fx:Script>
	<![CDATA[
		import mx.events.FlexEvent;
		import mx.messaging.events.MessageEvent;
		import mx.messaging.messages.AsyncMessage;
		
		//--------------------------------------------------------------------------
		//
		//  Methods
		//
		//--------------------------------------------------------------------------
		
		private function send():void
		{
			var message:AsyncMessage = new AsyncMessage();
			message.body.chatMessage = msg.text;
			producer.send(message);
			msg.text = "";
		}
		
		private function messageHandler(event:MessageEvent):void
		{
			logTextArea.text += event.message.body.chatMessage + "\n";
		}
		
		//--------------------------------------------------------------------------
		//
		//  Event handlers
		//
		//--------------------------------------------------------------------------
		
		/**
		 * @private
		 */
		private function this_creationCompleteHandler(event:FlexEvent):void
		{
			// consumer.subscribe();
		}
		
	]]>
	</fx:Script>
	
	<mx:TextArea id="logTextArea" width="100%" height="100%"/>
	<mx:ControlBar>
		<controls:MoqawalatiTextInput id="msg" width="100%" enter="send()"/>
		<controls:MoqawalatiButton label="Send" click="send()"/>
	</mx:ControlBar>
</containers:MoqawalatiMDIWindow>