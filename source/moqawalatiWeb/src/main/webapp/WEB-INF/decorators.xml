<decorators defaultdir="/">
	<excludes>
		<pattern>*.js</pattern>
		<pattern>*.jpg</pattern>
		<pattern>*.jpeg</pattern>
		<pattern>/login.jsp*</pattern>
		<pattern>/spring_security_login*</pattern>
	</excludes>

	<decorator name="frames" page="/WEB-INF/jsp/frames.jsp" />

	<decorator name="nolayout" page="/WEB-INF/jsp/nolayout.jsp">
		<pattern>/login.jsp</pattern>
		<pattern>/denied.jsp</pattern>
	</decorator>

	<decorator name="layout" page="/WEB-INF/jsp/layout.jsp">
		<pattern>*</pattern>
	</decorator>
</decorators>